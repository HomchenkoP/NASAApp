<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NASAApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">#FF212121</item>
        <item name="colorOnSurface">#FFDEDEDE</item>
        <item name="colorOnBackground">#FFDEDEDE</item>
        <item name="shapeAppearanceSmallComponent">@style/Theme.NASAApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/Theme.NASAApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/Theme.NASAApp.LargeComponent</item>
        <item name="bottomNavigationStyle">@style/Theme.NASAApp.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/Theme.NASAApp.CardView</item>
        <item name="chipStyle">@style/Theme.NASAApp.Chip</item>
        <item name="switchStyle">@style/Theme.NASAApp.Switch</item>
        <item name="popupMenuBackground">@drawable/custom_menu_background</item>
    </style>

    <style name="Theme.NASAApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

    <style name="Theme.NASAApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="Theme.NASAApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="Theme.NASAApp.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NASAApp.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.NASAApp.BottomNavigationView" parent="">
        <item name="colorSurface">?attr/colorOnPrimary</item>
<!--        <item name="colorOnSurface">?attr/colorPrimary</item>-->
    </style>

    <style name="Theme.NASAApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NASAApp.Card</item>
        <item name="shapeAppearanceOverlay">@style/Theme.NASAApp.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.NASAApp.Card" parent="">
<!--        <item name="colorSurface">?attr/colorPrimary</item>-->
    </style>

    <style name="Theme.NASAApp.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NASAApp.Chip</item>
        <item name="shapeAppearanceOverlay">@style/Theme.NASAApp.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.NASAApp.Chip" parent="">
<!--        <item name="colorOnSurface">?attr/colorPrimary</item>-->
        <item name="chipIconTint">@null</item>
        <item name="checkedIconTint">@null</item>
    </style>

    <style name="Theme.NASAApp.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NASAApp.Switch</item>
    </style>

    <style name="ThemeOverlay.NASAApp.Switch" parent="">
        <item name="colorSecondary">?attr/colorPrimary</item>
    </style>
</resources>